<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/drawer_layout"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<FrameLayout
		android:id="@+id/content_frame"
		android:layout_width="match_parent"
		android:layout_height="match_parent"/>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:id="@+id/rel_layout">

		<ScrollView
			android:id="@+id/scroll"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<HorizontalScrollView
				android:id="@+id/hscroll"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<LinearLayout
					android:id="@+id/layout_button"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:orientation="horizontal">

				</LinearLayout>

			</HorizontalScrollView>

		</ScrollView>

		<LinearLayout
			android:id="@+id/layout_centr"
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:orientation="vertical"
			android:layout_below="@+id/scroll">

			<LinearLayout
				android:id="@+id/layout_start_stop"
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:orientation="vertical"
				android:layout_weight="1">

				<LinearLayout
					android:id="@+id/layout_start_stop2"
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:orientation="vertical"
					android:gravity="center">

					<TextView
						android:id="@+id/text2"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textAppearance="?android:attr/textAppearanceMedium"
						android:layout_gravity="center"
						android:layout_alignParentRight="true"/>

				</LinearLayout>

				<ScrollView
					android:id="@+id/scrollvert"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent">

					<LinearLayout
						android:id="@+id/layout_tabl"
						android:layout_height="wrap_content"
						android:layout_width="match_parent"
						android:orientation="vertical">

						<TableLayout
							android:id="@+id/table"
							android:layout_width="fill_parent"
							android:layout_height="fill_parent"
							android:background="@color/colorTablGran"
							android:stretchColumns="0,5">

						</TableLayout>

					</LinearLayout>

				</ScrollView>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/layout_tabl2"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="vertical">

				<TableLayout
					android:id="@+id/table2"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:background="@color/colorTablGran"
					android:stretchColumns="0,1,2,3,4,5">

				</TableLayout>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/layout_start_stop3"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="vertical"
				android:layout_weight="0">

				

				<LinearLayout
					android:id="@+id/layout_start_stop4"
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:orientation="horizontal">

					<Button
						android:id="@+id/zayvka_start"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="Купить"/>

					<Button
						android:id="@+id/zayvka_stop"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="Продать"/>

				</LinearLayout>

			</LinearLayout>

		</LinearLayout>

	</RelativeLayout>

	<ListView
		android:id="@+id/left_drawer"
		android:layout_width="240dp"
		android:layout_height="match_parent"
		android:layout_gravity="start"
		android:background="#fff"
		android:choiceMode="singleChoice"
		android:divider="@android:color/transparent"
		android:dividerHeight="0dp"/>

</android.support.v4.widget.DrawerLayout>

